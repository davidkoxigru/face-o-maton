<Window x:Class="face_o_maton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:face_o_maton"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"  
        WindowState="Maximized" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Height="300" Width="300" Click="Video_Button_Click">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="pictures/Camera.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Grid.Column="1"  Height="300" Width="300" Click="Photo_Button_Click">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="pictures/Photo.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Grid.Column="2" Height="300" Width="300" Click="Mix_Faces_Button_Click">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="pictures/MixFaces.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
