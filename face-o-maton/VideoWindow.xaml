<Window x:Class="face_o_maton.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:face_o_maton"
        mc:Ignorable="d"
        Title="VideoWindow"
        WindowStyle="None"  
        WindowState="Maximized">
    <Grid x:Name="GridVideo">
        <Image x:Name="Video" RenderTransformOrigin="0.5,0.5" Margin="30">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>


        <TextBlock x:Name="CounterBeforeVideo" Foreground="Blue" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="192"  Height="200" Width="600" VerticalAlignment="Center" TextAlignment="Center"></TextBlock>
        <TextBlock x:Name="CounterVideo" Foreground="Blue" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="96"  Height="100" Width="600" VerticalAlignment="Bottom" TextAlignment="Center"></TextBlock>
        <TextBlock x:Name="ErrorMessage" Foreground="Blue" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="48"  Height="120" Width="900" VerticalAlignment="Center" TextAlignment="Center"><Run Text="Petit problème technique"/><LineBreak/><Run Text="Veuillez réessayer"/></TextBlock>

    </Grid>

</Window>
